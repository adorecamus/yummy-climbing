<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yummyclimbing.mapper.community.CommunityFileInfoMapper">

<sql id="cfColumns">
	CF_NUM, CB_NUM, CF_NAME, 
	CF_PATH1, CF_PATH2, CF_PATH3, CF_CONTENT
</sql>

<select id="selectFileList" resultType="com.yummyclimbing.vo.community.CommunityFileInfoVO">
	SELECT 
	<include refid="cfColumns"/>
	FROM COMMUNITY_FILE_INFO
	WHERE CB_NUM=#{cbNum}
</select>

<insert id="insertFile">
	INSERT INTO COMMUNITY_FILE_INFO(
	<include refid="cfColumns"/>
	)
	VALUES(
	#{cfNum}, #{cbNum}, #{cfName}, 
	#{cfPath1}, #{cfPath2}, #{cfPath3}, #{cfContent},
	)
</insert>

</mapper>